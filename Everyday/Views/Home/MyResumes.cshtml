@model IEnumerable<Everyday.Models.Resume>

@{
                /**/

                ViewBag.Title = "MyResumes";
}
<link href="/Content/common.css" rel="stylesheet">
<link href="/Content/forlist.css" rel="stylesheet">
<link href="/Content/forresume.css" rel="stylesheet">

<div style="display: flex; justify-content: start; flex-direction: column; margin-left: -5%;">
    <h2> Мои резюме</h2>

    <p>
        @Html.ActionLink("Cоздать", "CreateResume", new { id = ViewBag.id })
    </p>
</div>

<div class="forflex">
<table class="table">
    <tr>
        <th class="thgreen">
          Название резюме
        </th>
        <th class="thgreen">
            ФИО
        </th>
        <th class="thgreen">
           Возраст
        </th>
        <th class="thgreen">
            Почта
        </th>
        <th class="thgreen">
           Мобильный
        </th>
        <th class="thgreen" >
           О себе
        </th>
        <th class="thgreen">
          Фото
        </th>
        <th></th>
    </tr>

@if(Model == null)
{


}
else
{
    foreach (var item in Model)
    {
        <tr>
            <td class="bott">
                @Html.DisplayFor(modelItem => item.ResumeName)
            </td>
            <td class="bott">
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td class="bott">
                @Html.DisplayFor(modelItem => item.UserAge)
            </td>
            <td class="bott">
                @Html.DisplayFor(modelItem => item.UserEmail)
            </td>
            <td class="bott">
                @Html.DisplayFor(modelItem => item.MobileNumber)
            </td>
            <td class="bott">
                <div style="overflow-y: scroll; width: 350px; height: 230px;">
                    @Html.DisplayFor(modelItem => item.About)
                </div>
            </td>
            <td>
                <div style="position: relative; overflow: hidden; width: 250px; height: 240px;">
                    <img src="@String.Format(" data:image/jpg;base64,{0}", Convert.ToBase64String(item.Photo))" style="position: absolute; transform: translate(10%, 5%); width: 250px; height: 250px; object-fit: cover;"/>
                </div>


            </td>

            <td>
                <div class="smen" style="display: flex; justify-content: center; flex-direction: column; margin-top: -20px;">
                @Html.ActionLink("Изменить", "EditResume", new {id = item.ResumeId}) 
                @Html.ActionLink("Удалить", "DeleteResume", new {id = item.ResumeId})
                 </div>
            </td>
        </tr>
    }
}

</table>

</div>